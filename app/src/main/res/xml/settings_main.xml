<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:defaultValue="@string/settings_subject_default"
        android:entries="@array/settings_subject_labels"
        android:entryValues="@array/settings_subject_values"
        android:key="@string/settings_subject_key"
        android:title="@string/settings_subject_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_date_default"
        android:inputType="date"
        android:key="@string/settings_date_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_date_label" />

</PreferenceScreen>